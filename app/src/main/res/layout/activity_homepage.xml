<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF66"
    tools:context="com.example.dhp.codefundo.HomePage">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Groups"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/spacing"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/top"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutforrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacing"
        android:background="#DCDCDC"
        android:orientation="vertical">


        <ListView
            android:id="@+id/simpleListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFF66"
            android:dividerHeight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separatorlayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layoutforrecyclerview"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/separatorlayout"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/createPersongroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008080"
            android:text="Create New Person Group"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</RelativeLayout>
