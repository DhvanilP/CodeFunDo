<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF66"
    tools:context="com.example.dhp.codefundo.HomePage">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Create Group "
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/spacing"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/top"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutforrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacing"
        android:background="#FFFF66"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFF66"
            android:text="Enter personGroupId :"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/groupidname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="person group Id"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/namequestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFF66"
            android:text="Enter personGroup name :"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="person group name"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/userdataquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFF66"
            android:text="Enter personGroup user-data:"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:hint="person group user-data"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/separatorlayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layoutforrecyclerview"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/separatorlayout"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/createPersongroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008080"
            android:text="Create "
            android:textColor="#FFFFFF" />
    </LinearLayout>


</RelativeLayout>
